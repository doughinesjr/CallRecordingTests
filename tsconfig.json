{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es5",
            "es2015.promise",
            "dom",
            "es2017"
        ],
        "mapRoot": "compiled"
    },
    "include": [
        "./test/**/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}